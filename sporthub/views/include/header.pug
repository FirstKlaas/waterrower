.header
  .icon.clickable(onClick='showMainMenu()')
    i(class="fa fa-BARS",aria-hidden="true")
  if (user && user.twitter_profile)
    a(hfref="/profile")
      img#profileimage(src=user.twitter_profile.profile_image_url_https_200)
  else
    a(hfref="/profile")
       img#profileimage(src='/img/aang.png')
  .title
    h1#current-user #{user.firstname}
    if (device)
      h2#current-device #{device.human}
    else
      h2#current-device Kein Gerät ausgewählt  